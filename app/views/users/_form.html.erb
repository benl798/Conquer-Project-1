<%= form_for @user, html: {multipart: true} do |f| %>

<% if @user.errors.full_messages.any? %>
  <ul>
    <% @user.errors.full_messages.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<%= f.label :name %><br>
  <%= f.text_field :name, required: true %>
  <br>

  <%= f.label :dob %><br>
  <%= f.date_field :dob, required: true %>
  <br>

  <%= f.label :image, 'Image URL' %><br>


  <%= f.cl_image_upload :image %>
  <br>

  <%= f.label :sex %><br>
  <%= f.text_field :sex %>
  <br>

  <%= f.label :height %><br>
  <%= f.text_field :height %>
  <br>

  <%= f.label :weight %><br>
  <%= f.text_field :weight %>
  <br>

  <%= f.label :target_weight %><br>
  <%= f.text_field :target_weight %>
  <br>

  <%= f.label :bio %><br>
  <%= f.text_field :bio %>
  <br>

  <%= f.label :goal %><br>
  <%= f.text_field :goal %>
  <br>

  <%= f.label :email %><br>
  <%= f.text_field :email, required: true %>
  <br>

  <%= f.label :password %><br>
  <%= f.password_field :password, required: true %>
  <br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation, required: true %>
  <br>

  <br>
  <br>

  <%= f.submit %>

<% end %>
