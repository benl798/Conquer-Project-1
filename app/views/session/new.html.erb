<div id="login_page">
  <div class="content">
  <div class="login_new">
    <h2>Login</h2>
  </div>


<div class="login_credentials">
<% if flash[:error] %>
  <!-- print out any error messages from the controller -->
  <strong>
    <%= flash[:error] %>
  </strong>
<% end %>

<!-- we are not interacting with a model object, so we don't use 'form_for @obj' -->
<%= form_tag login_path do %>

  <%= label_tag :email, 'Email:' %>
  <%= email_field_tag :email %>
  <br>

  <%= label_tag :password, 'Password:' %>
  <%= password_field_tag :password %>
  <br>
  <br>

  <%= submit_tag 'Login', class:'login_button' %>

<% end %>
</div>
</div>
</div>
